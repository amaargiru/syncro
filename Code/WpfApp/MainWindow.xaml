<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Syncro"
        Height="450" Width="800" WindowState="Maximized">

    <Grid x:Name="MainGrid">

        <Grid.RowDefinitions>
            <RowDefinition x:Name="MenuRow" Height="Auto"/>
            <RowDefinition x:Name="ButtonRow" Height="Auto"/>
            <RowDefinition x:Name="OpenDirectoryRow" Height="Auto"/>
            <RowDefinition x:Name="MainRow" Height="100*" MinHeight="400"/>
            <RowDefinition x:Name="StatusBarRow" Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="PrimaryDriveColumn" Width="40*" MinWidth="400"/>
            <ColumnDefinition x:Name="LeftSplitterColumn" Width="Auto"/>
            <ColumnDefinition x:Name="CentralColumn" Width="20*" MinWidth="150"/>
            <ColumnDefinition x:Name="RightSplitterColumn" Width="Auto"/>
            <ColumnDefinition x:Name="SecondaryDriveColumn" Width="40*" MinWidth="400"/>
        </Grid.ColumnDefinitions>

        <Menu Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="0" x:Name="MainMenu">
            <MenuItem Header="File">
                <MenuItem Header="Exit"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"></MenuItem>
            </MenuItem>
        </Menu>

        <StackPanel Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="1" Orientation="Horizontal" x:Name="ButtonStackPanel">
            <Button Content="Compare" x:Name="CompareButton"/>
            <Button Content="Stop" x:Name="StopButton"/>
            <Button Content="Synchronize" x:Name="SynchronizeButton"/>
        </StackPanel>

        <Grid Grid.Row="2" Grid.ColumnSpan="5" x:Name="OpenDirectoriesGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="PrimaryTextBoxColumn" Width="40*"/>
                <ColumnDefinition x:Name="PrimaryButtonColumn" Width="10*"/>
                <ColumnDefinition x:Name="SecondaryTextBoxColumn" Width="40*"/>
                <ColumnDefinition x:Name="SecondaryButtonColumn" Width="10*"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="OpenPrimaryTextBox"/>
            <Button Grid.Column="1" Content="Open" x:Name="OpenPrimaryButton" Click="OpenPrimaryButton_Click"/>
            <TextBox Grid.Column="2" x:Name="OpenSecondaryTextBox"/>
            <Button Grid.Column="3" Content="Open" x:Name="OpenSecondaryButton"/>
        </Grid>

        <DataGrid Grid.Column="0" Grid.Row="3" x:Name="LeftDataGrid"/>

        <GridSplitter Grid.Column="1" Grid.Row="3" x:Name="LeftSplitter" ShowsPreview="False" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="4" Margin="8,4,8,4"/>

        <DataGrid Grid.Column="2" Grid.Row="3" x:Name="CentralDataGrid"/>

        <GridSplitter Grid.Column="3" Grid.Row="3" x:Name="RightSplitter" ShowsPreview="False" 
                      HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="4" Margin="8,4,8,4"/>

        <DataGrid Grid.Column="4" Grid.Row="3" x:Name="RightDataGrid" />

        <StatusBar Grid.Column="0" Grid.ColumnSpan="5" Grid.Row="4" x:Name="MainStatusBar">
            <Label x:Name="StatusLabel" Content="Ready" VerticalAlignment="Center"/>
        </StatusBar>

    </Grid>
</Window>
